{
    "env": {
        "browser": true,
        "es2021": true
    },
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "extends": ["plugin:jsdoc/recommended"],
    "plugins": ["jsdoc"],
    "rules": {
        "no-var": "error",
        "jsdoc/require-jsdoc": [
          "error", {
            "require": {
              "FunctionDeclaration": true,
              "MethodDefinition": true,
              "ClassDeclaration": true
              // You can add more as needed: ArrowFunctionExpression, FunctionExpression, etc.
            }
          }
        ]
    }
}
