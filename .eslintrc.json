{
    "env": {
        "browser": true,
        "es2021": true
    },
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "extends": ["airbnb-base", "plugin:jsdoc/recommended"],
    // todo - prettierrc.json and eslintrc are fighting just a little bit on some formatting, need to cleanup
    "plugins": ["jsdoc"],
    "rules": {
        "jsdoc/require-jsdoc": [
            "error",
            {
                "require": {
                "FunctionDeclaration": true,
                "MethodDefinition": true,
                "ClassDeclaration": true
                // You can add more as needed: ArrowFunctionExpression, FunctionExpression, etc.
                }
            }
        ],
        "max-len": ["error", { "code": 180 }], // Make sure this matches prettier
        "no-var": "error"
    }
}
